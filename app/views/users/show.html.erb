<table>

<tr>
<td><%= link_to 'Home', photos_path %></td>
</tr>
<tr>
<% if current_user == @user %>
<td><%= link_to 'New Photo', new_photo_path %></td>
<% end %>
</tr>


<% @user.photos.each do |photo| %>
<tr>
	<td>
		<% if photo.logo.exists? %> 
			<%= link_to image_tag( photo.logo.url(:thumb) ), photo.logo.url %>
		<% end %>
	</td>

	<td><%= link_to 'Show', photo_path(photo) %></td>

	<% if current_user == @user %>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Delete', photo_path(photo), :method => :delete %></td>
	<% end %>

</tr>
<% end %>


</table>